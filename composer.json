{
  "name": "berlioz/twig-package",
  "type": "berlioz-package",
  "description": "Twig package for Berlioz Framework",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "homepage": "https://getberlioz.com",
  "authors": [
    {
      "name": "Ronan Giron",
      "email": "ronan@getberlioz.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Berlioz\\Package\\Twig\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Berlioz\\Package\\Twig\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7.1",
    "ext-intl": "*",
    "ext-json": "*",
    "berlioz/core": "@dev",
    "berlioz/helpers": "@dev",
    "twig/twig": "^2.7 || ^3.0",
    "psr/log": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5 || ^8.0"
  },
  "config": {
    "berlioz": {
      "package": "Berlioz\\Package\\Twig\\TwigPackage"
    }
  }
}

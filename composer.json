{
  "name": "berlioz/twig-package",
  "type": "berlioz-package",
  "description": "Twig package for Berlioz Framework",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "homepage": "http://www.berlioz-framework.com",
  "authors": [
    {
      "name": "Ronan Giron",
      "email": "ronan.giron@berlioz-framework.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Berlioz\\Package\\Twig\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Berlioz\\Package\\Twig\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.1",
    "ext-json": "*",
    "berlioz/core": "@dev",
    "berlioz/utils": "@dev",
    "twig/twig": "~2.4",
    "psr/log": "~1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~7.2"
  }
}
